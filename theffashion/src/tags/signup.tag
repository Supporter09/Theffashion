<signup>
        <div class="grid-center-middle signup">
                <div class="signupcotent">
                    <h1 >Sign up here</h1>
                     <span>Best place to buy and check events</span>
                    <form action="" id="signupform" >
                    <div>
                        <label for="">Username:</label>
                        <input class="fullwidth"type="text"  id="username" placeholder="Username must be 6 characters or above">
                    </div>
                      <div>
                          <label for="">Email address:</label>
                          <input class="fullwidth" type="email" id="email" placeholder="example@gmail.com" required>
                  
                      </div>
                      <div>
                          <label for="">Password:</label>
                          <input class="fullwidth" type="password" id="password" placeholder="password must be 6 characters or above" required>
                      </div>
                      <div>
                          <label for="">Retype Password:</label>
                          <input class="fullwidth" type="password" id="repassword" placeholder="retype the right password" required>
                      </div>
                      <div>
                          <label for="">Phone number:</label>
                          <input class="fullwidth" type="number" id="phonenumber" placeholder="10 number, example 0912345678">
                      </div>
                      <p id="errormessage"></p>
                      <button class="fullwidth">Sign Up</button>
                  </form>
                </div>
                  
            </div>
</signup>
